@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Chi Tiết Đơn hàng";
    decimal total = 0;
    decimal subtotal = 0;
}
<h1>Chi Tiết Đơn hàng</h1>
<a asp-action="Index">Quay lại danh sách</a>
<table class="table">
    <thead>
        <tr>

            <th scope="col">Id</th>
            <th scope="col">Mã Đơn hàng</th>
            <th scope="col">Tên người dùng</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá sản phẩm</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Tổng phụ</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            subtotal = item.Quantity * item.Price;
            total += subtotal;
            <tr>
                <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                <td>@item.Id</td>
                <td>@item.OrderCode</td>
                <td>@item.UserName</td>
                <td>@item.Product.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@subtotal.ToString("#,##0 VNĐ")</td>
            </tr>
        }
        <tr>
            <td class="text-end" colspan="6">Tổng cộng: @total.ToString("#,##0 VNĐ")</td>
            <td class="text-end">
                <select class="form-control select-update-order">
                    <option value="1">Đơn hàng mới</option>
                    <option value="0">Đã xử lý</option>
                </select>
            </td>
        </tr>
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select-update-order').change(function () {
                var status = $(this).val();
                var ordercode = $('.getId').val();
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder")",
                    data: { status: status, ordercode: ordercode },
                    success: function (result) {
                        if (result.success) {
                            swal.fire("Cập nhật đơn hàng thành công");
                        }
                        else {
                            swal.fire("Cập nhật đơn hàng thất bại" + result.message);
                        }
                    },
                });
            });
        });
    </script>
}