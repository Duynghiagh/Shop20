@model AppUserModel

@{
    ViewData["title"] = "Chỉnh sửa người dùng";
}
<h1>Chỉnh sửa người dùng</h1>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label class="form-label">Tên người dùng</label>
            <input asp-for="UserName" required class="form-control">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" required class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Số điện thoại</label>
            <input asp-for="PhoneNumber" required class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Mật khẩu (Hash)</label>
            <input asp-for="PasswordHash" readonly required class="form-control">
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Vai trò</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Cập nhật</button>
        </div>
    </form>
    <a asp-action="Index">Quay lại danh sách người dùng</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
