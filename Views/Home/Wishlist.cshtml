@{
    ViewData["title"] = "List Wishlist";
    var key = 0;
}
<h1>List Wishlist</h1>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên Sản phẩm</th>
            <th scope="col">Mô tả Sản phẩm</th>
            <th scope="col">Giá Sản phẩm</th>
            <th scope="col">Hình ảnh Sản phẩm</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wishlist_p in Model)
        {
            key++;
            <tr>
                <td>@key</td>
                <td>@wishlist_p.Product.Name</td>
                <td>@Html.Raw(wishlist_p.Product.Description)</td>
                <td>@wishlist_p.Product.Price.ToString("#,##0 VNĐ")</td>
                <td><img src="~/media/products/@wishlist_p.Product.Image" width="100" height="80" /></td>
                <td>
                    <a asp-action="DeleteWishlist" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Home" asp-route-Id="@wishlist_p.Wishlists.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

