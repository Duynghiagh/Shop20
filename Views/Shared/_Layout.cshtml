    <style>
        <style >
        #slider-carousel .carousel-inner .item img {
            width: 200px; /* Điều chỉnh chiều rộng */
            height: auto; /* Giữ tỷ lệ ảnh */
            /* Header trên cùng */
            .header-top

        {
            background-color: #333;
            color: #fff;
            padding: 10px 0;
        }

        .header-top .shop-menu a {
            color: #fff;
            padding: 5px 15px;
            font-size: 14px;
        }

            .header-top .shop-menu a:hover {
                color: #ffcc00;
            }

        /* Header dưới cùng với menu chính */
        .header-middle {
            background-color: #fff;
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
        }

            .header-middle .navbar-nav li a {
                color: #333;
                font-weight: bold;
                font-size: 16px;
            }

                .header-middle .navbar-nav li a:hover {
                    color: #ffcc00;
                }

        /* Search box */
        .search_box {
            display: flex;
            gap: 5px;
        }

            .search_box input[type="text"] {
                padding: 8px;
                border-radius: 4px;
                border: 1px solid #ddd;
                width: 100%;
            }

            .search_box button {
                background-color: #ffcc00;
                border: none;
                padding: 8px 12px;
                border-radius: 4px;
                color: #333;
                font-weight: bold;
            }

        }
    </style>

    </style>
</head><!--/head-->

<body>
    <header id="header">
        <!-- Header trên cùng cho tài khoản và giỏ hàng -->
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                                <li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-cart"></i> Giỏ Hàng</a></li>
                                @if (User.Identity?.IsAuthenticated ?? false)
                                {
                                    <li class="dropdown">
                                        <a class="dropdown-toggle" data-toggle="dropdown" style="cursor:pointer">
                                            <i class="fa fa-user"></i> Tài Khoản <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a asp-controller="Account" asp-action="History">Lịch sử đặt hàng</a></li>
                                            <li><a asp-controller="Account" asp-action="UpdateAccount">Cập nhật thông tin</a></li>
                                        </ul>
                                    </li>
                                    <li><a asp-controller="Home" asp-action="Compare"><i class="fa fa-exchange"></i> So sánh</a></li>
                                    <li><a asp-controller="Home" asp-action="Wishlist"><i class="fa fa-heart"></i> Yêu thích</a></li>
                                    <li><a asp-controller="Account" asp-action="Profile"><i class="fa fa-user"></i> Thông tin</a></li>
                                    <li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-lock"></i> Chào, @User.Identity.Name, Đăng Xuất</a></li>
                                }
                                else
                                {
                                    <li><a asp-controller="Account" asp-action="Login"><i class="fa fa-lock"></i> Đăng Nhập</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Header dưới cùng với menu chính và tìm kiếm -->
        <div class="header-middle">
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="mainmenu pull-left">
                            <ul class="nav navbar-nav">
                                <li><a asp-controller="Home" asp-action="Index" class="active">Trang Chủ</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <form asp-controller="Product" asp-action="Search" method="post">
                            <div class="search_box pull-right">
                                <input type="text" placeholder="Tìm kiếm" name="searchTerm" />
                                <button class="btn btn-warning" type="submit">Tìm Kiếm</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="slider">
